<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="1dp"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Review whitehorse159"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:id="@+id/title"
            android:textColor="@android:color/white"
            android:textSize="26dp"/>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        app:maxImageSize="64dp"
        app:fabCustomSize="56dp"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Exercises.AnnotateWriting"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/annotateLayout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/TitleStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Annotations and Me"
                android:textAlignment="center"
                android:textSize="26sp"
                app:autoSizeMinTextSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/writingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="This is a writing. I love annotation. The most spectacular thing to do on a Sunday Morning is to create a layout for annotating. It would have been great to have the milestone on January 1st then we would be able to enter the new year working on annotations to spend 2020 working on annotations as well.This is a writing. I love annotation. The most spectacular thing to do on a Sunday Morning is to create a layout for annotating. It would have been great to have the milestone on January 1st then we would be able to enter the new year working on annotations to spend 2020 working on annotations as well. This is a writing. I love annotation. The most spectacular thing to do on a Sunday Morning is to create a layout for annotating. It would have been great to have the milestone on January 1st then we would be able to enter the new year working on annotations to spend 2020 working on annotations as well."
                android:textAlignment="center"
                android:textIsSelectable="true"
                android:textSize="24sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendReview"
                style="@style/answer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:text="Send Your Review"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorAccent"
                app:backgroundTint="@color/colorAccentTransparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/colorAccent"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="5dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
