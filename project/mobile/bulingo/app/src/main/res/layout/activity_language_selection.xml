<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bulingo.Exercises.LanguageSelection"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/orange_world"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/earth"
        app:srcCompat="@drawable/orange_world" />

    <TextView
        android:id="@+id/languageSelectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/ubuntu_medium_italic"
        android:text="@string/chooseLanguage"
        android:textAlignment="center"
        android:maxWidth="300dp"
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/languageRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:listitem="@layout/language_button">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
